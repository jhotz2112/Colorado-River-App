<%- include('../partials/header') %>

    <main>
        <% if (rivers.length) { %>
            <table id="list">
                <thead>
                    <tr>
                        <th>River Name |</th>
                        <th>GPS Location |</th>
                        <th>Difficulty |</th>
                        <th>Date<br>Visited |</th>
                        <th>Open</th>
                    </tr>
                </thead>
                <tbody>
                    <% rivers.forEach(function(r) { %>
                        <tr>
                            <td><a href="/rivers/<%= r._id %>">
                                    <%= r.title %>
                                </a>
                                &nbsp;|&nbsp;
                            </td>
                            <td>
                                <%= r.longitude %> / <%= r.latitude %>
                                &nbsp;|&nbsp;
                            </td>
                            <td>
                                <%= r.difficulty %>
                                &nbsp;|&nbsp;
                            </td>
                            <td>
                                <%= r.dateVisited.toLocaleDateString() %>
                                &nbsp;|&nbsp;
                            </td>
                            <td>
                                <% if (r.open === true) { %>
                                    Yes
                                    <%} else {%>
                                        No
                                        <% } %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% } else { %>
                <h1><a href="/rivers/new">No Lakes/Rivers Added</a></h1>
                <% } %>
    </main>

    <%- include('../partials/footer') %>