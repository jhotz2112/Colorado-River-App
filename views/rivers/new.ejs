<%- include('../partials/header') %>

    <section id="show-page">
        <h1>Enter a New River</h1>
        <form action="/rivers" method="POST">
            <label>Lake/River Name:<br>
                <input type="text" name="title">
                </select>
            </label><br>
            <label>GPS Location:<br>
                Latitude:<br><input type="text" name="latitude">
                <br>Longitude:<br><input type="text" name="longitude">
                </select></label><br>
                <label>Difficulty:<br>
                    <select name="difficulty">
                        <option value="Beginner">Beginner</option>
                        <option value="Intermediate">Intermediate</option>
                        <option value="Expert" selected>Expert</option>
                    </select>
                </label><br>
                <label for="dateVisited">Date Visited:<br></label>
                <input type="datetime-local" id="dateVisited" name="dateVisited" value=<%=function () { return new
                    Date().getFullYear(); } %>
                    <br><br>
                <label>Open:</label><br>
                <input type="checkbox" name="open" checked>
                </label><br>
                <input type="submit" value="Add River">
        </form>

